<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eva_mariaschoen.sose2018travelbird">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/travel_bird"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/travel_bird_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="TravelBird"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="Profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TravelsActivity"
            android:label="Travels"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".CalendarActivity"
            android:label="Calendar"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".NewTravelActivity"
            android:label="Create a new Travel"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NewEntryActivity"
            android:label="Create a new Entry"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".BaseActivity" />

    </application>

</manifest>