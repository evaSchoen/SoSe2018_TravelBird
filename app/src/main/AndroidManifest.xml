<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eva_mariaschoen.sose2018travelbird">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/travel_bird"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/travel_bird_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/activity_profile_name"></activity>
        <activity
            android:name=".TravelsActivity"
            android:label="@string/activity_travels_name"></activity>
        <activity
            android:name=".NewTravelActivity"
            android:label="@string/activity_new_travel_name"></activity>
        <activity
            android:name=".CalendarActivity"
            android:label="@string/activity_calendar_name"></activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
    </application>

</manifest>